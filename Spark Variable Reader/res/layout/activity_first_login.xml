<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sparkrc.FirstLogin"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/FirstLogin_deviceId"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="@string/hint_deviceId"
        android:ems="10"
        />

    <EditText
        android:id="@+id/FirstLogin_accessToken"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="@string/hint_accessToken"
        android:ems="10"
        />

    <CheckBox
        android:id="@+id/FirstLogin_showAccessToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/CheckBox_showAccessToken"
        />

    <TextView
        android:id="@+id/FirstLogin_showAccessToken_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:text="@string/TextView_showAccessToken_warning" />

    <TextView
        android:id="@+id/firstLogin"
        android:paddingTop="20dp"
        android:paddingLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        />

</LinearLayout>
